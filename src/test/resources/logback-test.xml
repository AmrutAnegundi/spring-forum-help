<?xml version="1.0" encoding="UTF-8"?>

<configuration>

   <contextName>grgr.spring.forum.help</contextName>

   <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
      <layout class="ch.qos.logback.classic.PatternLayout">
         <pattern>%d{HH:mm:ss.SSS} %-5level {%thread} (%F:%L\) [%logger{20}] : %msg%n</pattern>
      </layout>
   </appender>

   <logger name="grgr.spring.forum.help" level="TRACE" />

   <root level="INFO">
      <appender-ref ref="CONSOLE" />
   </root>

</configuration>
